---
import "../styles/global.css";
import { Icon } from 'astro-icon/components'
import Meta from '@ui//Meta.astro';
import TopBg from "@ui/TopBg.astro";
import Banner from "../components/sections/banner.astro";
import Footer from "@components/sections/Footer.astro";
import HeaderTwo from "@components/sections/HeaderTwo.astro";
import HeaderFour from "@components/sections/Header4.astro";
import TrackGa from "@widgets/TrackGa.astro";

import favIcon from "@/components/assets/images/logo.png";
import Weather from "@components/sections/WeatherMenu.astro";
import WeatherMenu from "@collections/menuWeather.json";

interface Props {
	title?: string | undefined;
	description?: string | undefined;
	keywords?: string | undefined;
}

const {
	title,
	description,
	keywords
} = Astro.props;

const WeatherContent = {
    title: "VÄDER",
    description: "Skärmflygutbildning, Butik, Resor och Tandemflygning från Åreskutan.",
    weatherLinks: WeatherMenu,
    externalLinkIcon: "external-link",
}




---

<html lang="">
  <head>
    <meta charset="UTF-8" />
    <Meta
      title = {title}
      description = {description}
      keywords = {keywords}
    />
    <TrackGa />
    <!-- Used to add dark mode right away, adding here prevents any flicker -->
    <script is:inline>
      if (typeof Storage !== 'undefined') {
        if (
          localStorage.getItem('dark_mode') &&
          localStorage.getItem('dark_mode') == 'true'
        ) {
          document.documentElement.classList.add('dark')
        }
      }
    </script>

    <link rel="icon" type="image/x-icon" href="../components/assets/images/logo.png" />
  </head>
  <body class="antialiased bg-bg-primary dark:bg-bg-primary-dark max-w-full overflow-x-hidden">
   <!--    <TopBg />  --> 
    <Banner />
    <HeaderFour/>
    <slot />
    <Footer />
    <!-- väder side panel -->
   <div id="hs-offcanvas-example" class="hs-overlay hs-overlay-open:translate-x-0 hidden translate-x-full fixed top-0 end-0 transition-all duration-300 transform h-full max-w-xs w-full z-80 bg-white border-e border-gray-200 dark:bg-neutral-800 dark:border-neutral-700" role="dialog" tabindex="-1" aria-labelledby="hs-offcanvas-example-label">
      <div class="flex justify-between items-center py-3 px-4 border-b border-gray-200 dark:border-neutral-700">
        <h3 id="hs-offcanvas-example-label" class="font-bold text-gray-800 dark:text-white">
          Väder länkar
        </h3>
        <button type="button" class="size-8 inline-flex justify-center items-center gap-x-2 rounded-full border border-transparent bg-gray-100 text-gray-800 hover:bg-gray-200 focus:outline-hidden focus:bg-gray-200 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-700 dark:hover:bg-neutral-600 dark:text-neutral-400 dark:focus:bg-neutral-600" aria-label="Close" data-hs-overlay="#hs-offcanvas-example">
          <span class="sr-only">Close</span>
          <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
      <div class="p-4">
        <p class="text-gray-800 dark:text-neutral-400">
   <Weather content={WeatherContent} />
        </p>
      </div>
    </div>
<!--end väder panel -->
<!-- väder kontakt panel -->
   <div id="hs-offcanvas-kontakt" class="hs-overlay hs-overlay-open:translate-x-0 hidden translate-x-full fixed top-0 end-0 transition-all duration-300 transform h-full max-w-xs w-full z-80 bg-white border-e border-gray-200 dark:bg-neutral-800 dark:border-neutral-700" role="dialog" tabindex="-1" aria-labelledby="hs-offcanvas-kontakt-label">
      <div class="flex justify-between items-center py-3 px-4 border-b border-gray-200 dark:border-neutral-700">
        <h3 id="hs-offcanvas-example-label" class="font-bold text-gray-800 dark:text-white">
          Kontakt
        </h3>
        <button type="button" class="size-8 inline-flex justify-center items-center gap-x-2 rounded-full border border-transparent bg-gray-100 text-gray-800 hover:bg-gray-200 focus:outline-hidden focus:bg-gray-200 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-700 dark:hover:bg-neutral-600 dark:text-neutral-400 dark:focus:bg-neutral-600" aria-label="Close" data-hs-overlay="#hs-offcanvas-kontakt">
          <span class="sr-only">Close</span>
          <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>
      </div>
      <div class="p-4">
        <p class="text-gray-800 dark:text-neutral-400">
             <p class="text-sm/6 text-white">0647-51186</p>
        <p class="text-sm/6 text-white">070-5699089</p>
          <p class="text-sm/6 text-white"> <a href="mailto:info@areskutan.se" class="text-sm/6 text-white">info@areskutan.se</a> </p>
        </p>
      </div>
    </div>
<!--end kontakt panel -->
   
     <!-- Preline UI -->
      <script>import "preline/dist/preline.js";</script>
     <!--  <script src="../../node_modules/preline/dist/preline.js"></script> -->
  <!-- <script is:inline src="../../node_modules/preline/dist/index.js"></script> -->
  </body>
 
</html>