---
import Layout from "@layouts/MainLayout.astro";
import KursSchema from "@components/sections/fortsattSchema.astro";
import Topper from  "@elements/navTopper.astro";
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";

const customLastPart = [
  { index: "last", text: "Fortsättningskurser Schema 2026" },
   {
    "data-link": "Kurs",
    "aria-label": "Go to the home page",
    text: "Kurs",
  },
  {
    "data-link": "Fort",
    "aria-label": "Go to the about page",
    text: "Fortsättningskurser",
  }, 
];

const SchemaContent = {
    title: "Fortsättningskurs Schema 2026",
    description: "Här hittar du vårt aktuella kursschema för fortsättningskurser i skärmflygning. Säkerhetskursen bokas med formulären på Säkerhetskurs sidan. Välj en kurs datum som passar dig och boka din plats idag!",
    note: "Observera! Alla kuser börja på måndagar. ",
    bookingForm: "/Kurs/Fortsättningskurser/Boka",
    schema: "classFortSchedule ",
}
---

<Layout
title="Skysport Skärmflygskola i Åre"
description="Welcome to Rico's portfolio site! Explore my work as a web/UI designer with 8+ years of experience in creating captivating visuals and interactive experiences."
keywords="Rico, Portfolio, Web Design, UI Design, Frontend Development, Creative Designer"
>
<Topper />
    <div class=" py-8 px-4 sm:px-8  md:px-68   dark:text-slate-200">
      <Breadcrumbs linkTextFormat="capitalized" separatorAriaHidden={false} customizeLinks={customLastPart}>
          <svg
              slot="index"
              aria-label="Home Page"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"> </path><polyline
              points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          <svg
              slot="separator"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><polyline points="9 18 15 12 9 6"></polyline>
          </svg>
      </Breadcrumbs>
  </div> 

<KursSchema content={SchemaContent}/>

</Layout>
