---
import Layout from "@layouts/MainLayout.astro";
import VideoHero from "@components/sections/VideoHero.astro";
import Booking from "@components/elements/forms/speedkursform.astro";
import Divider1 from  "@elements/SeparatorLine.astro";
import Feature50 from  "@sections/Feature-50-50.astro";
import SpeedImage from '@assets/images/kurs/speed1.png';
import SpeedImage2 from '@assets/images/kurs/speedDraklanda.png';
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";


const customLastPart = [
  { index: "last", text: "Speedgliding" },
