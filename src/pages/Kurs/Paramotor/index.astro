import BergImg1 from "@assets/images/kurs/IMG_2452b.jpg";
import BergImg2 from "@assets/images/kurs/åre6.jpg";
import ParamotorFAQ from '@sections/faqPara.astro';

import Divider1 from  "@elements/SeparatorLine.astro";
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";

const myVideo ="https://strapi-cdn-2.s3.eu-north-1.amazonaws.com/skysport25/video/Para/PM-d.mp4";
const tabVideo ="https://strapi-cdn-2.s3.eu-north-1.amazonaws.com/skysport25/video/Para/PM-t.mp4";
