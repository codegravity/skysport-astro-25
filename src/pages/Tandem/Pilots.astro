---
import Layout from "@layouts/MainLayout.astro";

import { Image } from "astro:assets";


import Button from '@components/ui/Button.astro';

import TandemPilots from "@components/sections/TandemPilots.astro";
import PilotCTA from "@components/sections/InnerHero.astro"

import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.css";


const InnerHeroImage = "https://strapi-cdn-2.s3.eu-north-1.amazonaws.com/skysport25/img/tandem/hummeln-sommar.jpg"

const customLastPart = [
  { index: "last", text: "Pilots" },
