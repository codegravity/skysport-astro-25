const tabVideo = "https://cdn26.skysport.se/start/Mobil-start-1020.mp4";

const VideoContent = {
  backgroundVideo: myVideo,
  mobileVideo: mobVideo,
  tabVideo: tabVideo,
  overlayOpacity: 0.2,
  page: "start",
  position: "justify-end",
};

 const HeroTandemContent = {
    //title: "TANDEMFLYG",
    //titleTextStyles: 'text-slate-200 text-4xl',
    //description: "",
    backgroundImage: Tandem1,
    imgMob: TandemMob,
    overlayOpacity: 0.2,
    position: "justify-end",
    btnTitle: 'TANDEMFLYG',
    btnTitleLink: '/Tandem/tandem',
    buttons: [
        {
        text: "BOKA",
        link: "/Tandem/Boka",
        target: "_self",
        },
    ],
};
 const HeroKursContent = {
   // title: "LÄR DIG FLYGA - GÅ EN KURS",
  //  description: "",
    backgroundImage: kurs1,
    bgImagePosition: 'object-bottom-left',
    imgMob: kursMob,
    overlayOpacity: 0.2,
    position: "justify-end",
    btnTitle: 'GÅ EN KURS',
    btnTitleLink: '/Kurs/omskarmflyg',
    titleTextStyles: ' ',    
    buttons: [
    {
      text: "BOKA",
      link: "/Kurs/Grundkurs/boka",
      target: "_self",
    },
  ], 
}; 

---

<Layout title="Skysport Skärmflygskola i Åre" description="" keywords="" >

  <VideoHero content={VideoContent}/> 
  <section class="relative">
    <ImageHero content={HeroTandemContent}/>
  </section>
  <section class="relative">
    <ImageHero content={HeroKursContent}/> 
  </section>
  <section >
      <Reco />
  </section>
 
</Layout>
