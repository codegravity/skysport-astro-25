import Reco from "@components/sections/RecoBar.astro";


import Tandem1 from '../assets/images/tandem/summartandem.jpg';
import kurs1 from '../assets/images/kurs/1.jpg';
import TandemMob from '../assets/images/tandem/3b.jpg';
import kursMob from '../assets/images/kurs/Draklanda20192b.jpg';

//const myVideo = "https://strapi-cdn-2.s3.eu-north-1.amazonaws.com/skysport25/video/start/skystart-1b.mp4";
