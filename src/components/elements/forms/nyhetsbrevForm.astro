    <input id="nyhetsBrev" name="hs-email-nyhetsBrev" type="email" autocomplete="email" placeholder="E-post"
        class="px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-orange-500"
    />
    <button  type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors" >
