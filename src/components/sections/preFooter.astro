---

import { siteData, navigation, contactInfo } from '@data/siteData';

import HittaOss from '@elements/altKarta.astro';
---
<section class="bg-slate-600 border-t border-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Newsletter -->
        <div class="sm:w-auto">
            <h4 class="text-lg font-semibold text-white mb-4">Newsletter</h4>
            <p class="text-gray-400 mb-4">Subscribe to get fitness tips and updates</p>
            <form class="flex flex-col space-y-2">
            <input
                type="email"
                placeholder="Your email"
                class="px-4 py-2 bg-slate-800 border border-slate-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-orange-500"
            />
            <button
                type="submit"
                class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors"
            >
                Subscribe
            </button>
            </form>
        </div>



      <!-- Quick Links -->
<!--       <div>
        <h4 class="text-lg font-semibold text-white mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-400 hover:text-orange-500 transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div> -->

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">Contact Us</h4>
        <ul class="space-y-4 text-gray-400">
          {contactInfo.slice(0, 3).map((info) => (
            <li class="flex items-start gap-3">
              <i class={`${info.icon} text-orange-500 text-xl mt-1 shrink-0`}></i>
              {info.link ? (
                <a href={info.link} class="hover:text-orange-500 transition-colors leading-relaxed">
                  {info.content}
                </a>
              ) : (
                <span class="leading-relaxed">{info.content}</span>
              )}
            </li>
          ))}
        </ul>
      </div>

    <!-- Hitta oss karta -->
      <div class="sm:col-span-2">
        <h4 class="text-lg font-semibold text-white  mb-4">Hitta Oss</h4>
         <HittaOss />
      </div>

    </div>
  </div>
</section>