                                       xmlns="http://www.w3.org/2000/svg"
                                       fill="none"
                                       viewBox="0 0 24 24"
                                       stroke-width="3"
                                       stroke="currentColor"
                                       class="w-3 h-3 mt-0.5 group-open/submenu:rotate-180">
