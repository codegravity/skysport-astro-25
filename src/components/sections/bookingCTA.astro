---
import { Image } from "astro:assets";
import Button from "@components/ui/Button.astro";


interface BookingCtaContent {
    title?: string;
    subtitle?: string;
    text: string;
    ctaBild: ImageMetadata;
    imgH?: number;
    imgW?: number;
    buttons?: {
        text: string;
        link: string;
        target?: string;
    }[];
    posttext?: string; 

}

interface Props {
    content: BookingCtaContent;
} 
const { content } = Astro.props;
---


<div class="max-w-[85rem] mx-auto px-4 py-4 sm:px-6 sm:py-6 lg:px-8 lg:py-12">
  <!-- Grid -->
  <div class="grid lg:grid-cols-7 lg:gap-x-8 xl:gap-x-12 lg:items-center">
    <div class="lg:col-span-4">
      <h1 class="block text-3xl font-bold text-gray-800 sm:text-3xl lg:text-4xl dark:text-white">{content.title}</h1>
      { content.subtitle &&
         <h1 class="block text-3xl font-bold text-gray-800 sm:text-3xl md:text-2xl  dark:text-white">{content.subtitle}</h1>
      }
      <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">{content.text}</p>

     

         {
      content.buttons && content.buttons.length > 0 && (
        <div class="flex  flex-col md:flex-row gap-4 mt-8 items-center">
          {content.buttons.map((button) => (
            <Button
              href={button.link}
              target={button.target || "_self"}
              variant={button.variant || "primary"}
            >
              {button.text}
            </Button>
          ))}
        </div>
      )
    }
    { content.posttext &&
         <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">{content.posttext}</p>
      }
    </div>
    <!-- End Col -->

    <div class="  lg:col-span-3 lg:col-end-8 mt-10 lg:mt-0">
            {
      content.ctaBild && (
        <div class="">
          <Image
            src={content.ctaBild}
            alt="Skysport Boka"
            width={content.imgW || 800}
            height={content.imgH || 800}
            class=" w-4/4 rounded-2xl"
            quality={70}
            format="webp"
            loading="lazy"
          />
        </div>
      )
    }
    </div>
    <!-- End Col -->
  </div>
  <!-- End Grid -->
</div>
<!-- End Hero -->