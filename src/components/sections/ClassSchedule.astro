---
import { classSchedule } from '../../data/siteData';
import { classFortSchedule } from '../../data/siteData';
const { content } = Astro.props;

const Datehref= content.bookingForm + "?startdate=";
const schema = content.schema;

const classSchedulex = "classFortSchedule";

//(schema === "classSchedule") ? { classSchedulex = "classSchedule" }: 


---
<div class="relative  px-0 bg-slate-900 text-center shadow-xl">
<section id="schedule" class="py-20 bg-slate-900 pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900">
  <div class=" w-full md:max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">{content.title}</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">{content.description}</p>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">{content.note}</p>
 
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class=" sm:hidden bg-slate-900"><!-- mobile table head -->
              <tr>
                <th class="px-2 sm:px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Boka</th>
                <th class="px-2 sm:px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Vecko</th>
                <th class="px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Startdatum</th>
                <th class="px-3 sm:px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Kurs</th>
              </tr>
            </thead>
            <thead class="hidden sm:table-header-group bg-slate-900"><!-- desktop table head -->
              <tr>
                <th class="px-6  py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Vecko</th>
                <th class="px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Startdatum</th>
                <th class="px-3 sm:px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Kurs</th>
                <th class="px-2 sm:px-6 py-4 text-left text-sm font-bold text-white uppercase tracking-wider">Boka</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-700">
             
              {classSchedule.map((schedule) => (
                
                <tr class="hover:bg-slate-700/50 transition-colors">
                  <td class="px-2 py-4 sm:hidden">
                    <a 
                      href={Datehref + schedule.linkDate}
                      class="text-orange-500 hover:text-orange-400 font-semibold flex items-center gap-2"
                    >
                      Boka
                      <i class="ri-arrow-right-line"></i>
                    </a>
                  </td>
                  <td class="px-5 sm:px-8 py-4 whitespace-nowrap ">
                    <div class="flex items-center gap-2">
                      <i class="ri-time-line text-orange-500"></i>
                      <span class="text-white font-semibold">{schedule.week}</span>
                    </div>
                  </td>
                  <td class="px-2 sm:px-6 sm:text-left py-4  ">
                    <span class="text-white font-medium">{schedule.month} </span><span class="text-white font-medium">{schedule.datum}</span>
                  </td>
                  <td class="px-3 py-4 text-left ">
                    <span class="text-gray-400">{schedule.kurs}</span>
                  </td>
                  <td class="hidden sm:block px-6 py-4">
                    <a 
                      href={Datehref + schedule.linkDate}
                      class="text-orange-500 hover:text-orange-400 font-semibold flex items-center gap-2"
                    >
                      Boka
                      <i class="ri-arrow-right-line"></i>
                    </a>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>

      <div class="text-center mt-8">
       <!--  <p class="text-gray-400 mb-4">View the complete schedule</p> -->
        <a
          href="/classes"
          class="inline-flex items-center gap-3 bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105"
        >
          Boka
          <i class="ri-calendar-line"></i>
        </a>
      </div>
    </div>
  </div>
</section>
</div>
