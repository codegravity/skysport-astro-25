---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Feature4Content {
  title: string;
  subTitle?: string;
  subTitleClasses?: string;
  description: string;
  listItemsIntro?: string;
  listItems?: {
    listIcon?: string;
    listText: string;
    listClasses?: string;
  } [];
  postText: string;
  fourImages: {
    bild: ImageMetadata;
    imgHeight:  number;
    imgWidth:  number;
    imgAlt:  string;
  }[],
  bild1?: ImageMetadata;
  bild2?: ImageMetadata;
  bild3?: ImageMetadata;
 
}

interface Props {
  content: Feature4Content;
}
const { content } = Astro.props;

---


<!-- Features -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <h2 class="font-bold text-3xl text-center py-12 lg:text-4xl text-gray-800 dark:text-neutral-200">
           {content.title}
          </h2>
    
  <!-- Grid -->
  <div class="lg:grid lg:grid-cols-12 lg:gap-16 lg:items-center">
    <div class="lg:col-span-7">
      <!-- Grid -->
      <!-- Image Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {content.fourImages.map((bild) => (
            <a class="hidden group sm:block relative overflow-hidden rounded-lg" href="#">
                <Image 
                  src={bild.bild}
                  alt={bild.imgAlt ||  "Skysports Tandem i Ã…re"}
                  class="w-full size-80 object-cover bg-gray-100  dark:bg-neutral-800 rounded-xl"
                  width={bild.imgWidth || '514'}
                  height={bild.imgHeight || '514'}
                  quality={80}
                  format="webp"
                  loading="lazy"
                  decoding="async"
                  layout="constrained"
              />
              {/* <div class="absolute bottom-1 end-1 opacity-0 group-hover:opacity-100 transition">
                <div class="flex items-center gap-x-1 py-1 px-2 bg-white border border-gray-200 text-gray-800 rounded-lg dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200">
                    <svg class="shrink-0 size-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                    <span class="text-xs">View</span>
                </div>
                </div> */}
            </a>
        ))}
       



       

        

            </div>
<!-- End Image Grid -->
      <!-- End Grid -->
    </div>
    <!-- End Col -->

    <div class="mt-5 sm:mt-10 lg:mt-0 lg:col-span-5">
      <div class="space-y-6 sm:space-y-8">
        <!-- Title -->
        <div class="space-y-2 md:space-y-4">
          
          <p class={content.subTitleClasses}>{content.subTitle}</p>
         <!--  <p class="text-gray-500 dark:text-neutral-500 text-balance"> -->
            <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400 text-balance text-pretty">
            {content.description}
          </p>
        </div>
        <p class="text-gray-800 dark:text-neutral-500 text-balance text-semibold">{content.listItemsIntro}</p>
        <!-- End Title -->
        {content.listItems && content.listItems.length > 0 && (
        <!-- List -->
        
        <ul class="space-y-2 sm:space-y-4">
          {content.listItems.map((item) => ( 
            <li class="flex gap-x-3">
            <span class="mt-0.5 size-5 flex justify-center items-center rounded-full bg-blue-50 text-blue-600 dark:bg-blue-800/30 dark:text-blue-500">
             <Icon type="button" name="solar--info-circle-linear" class=" sm:text-3xl text-2xl md:text-6xl "/>
            </span>
            <div class="grow">
              <span class="text-sm sm:text-base text-gray-500 dark:text-neutral-500">
                <span class={item.listClasses}>{item.listText}</span>
              </span>
            </div>
          </li>


          ))}
          

         
        </ul>
        <!-- End List -->
        )}
                   <p class="text-gray-500 dark:text-neutral-500 text-balance">
            {content.postText}
          </p>
      </div>
    </div>
    <!-- End Col -->
  </div>
  <!-- End Grid -->
</div>
<!-- End Features -->