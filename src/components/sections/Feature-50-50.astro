---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';
import Button from "@components/ui/Button.astro";


interface Feature50Content {
    infoOrientationL?: boolean;
    infoColL?: string;
    infoColR?: string;
    infoAnchorLink?: string;
    infoTitle?: string;
    infoDescription?: string;
    infoText: {
        preText?: string;
        spanText?: string;
        spanClasses?: string;
        postText?: string;
        linkTarget?: string;
        linkText?: string;
        linkUrl?: string; 
    }[],
    infoImg:  ImageMetadata;
    imgHeight?: number;
    imgWidth?: number;
    imgAlt?: string;
    imgPosition?: string;
    infoImg2?:  ImageMetadata;
    infoIcon?: string;
    buttons?: {
        text: string;
        link: string;
        target?: string;
    }[];
    isTandemPage?:  boolean;
    isKursPage?:  boolean;
    sectionStyles?: string;

}


interface Props {
    content: Feature50Content;
} 
const { content } = Astro.props;
const classPosL = 'sm:order-2';
const anchorLink = content.infoAnchorLink || '';

content.infoOrientationL  && {
  
}
const overlayPosition = content.imgPosition || "justify-center";
---

<!-- Card Blog -->
<div id={anchorLink} class="max-w-full lg:max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto" class:list={content.sectionStyles}>
  <!-- Grid -->
  <div class="grid sm:grid-cols-2 sm:items-center gap-8">
    <div class={content.infoColL || 'sm:order-1'}>
       {content.isKursPage &&
       <h2 class="text-2xl uppercase font-bold md:text-3xl lg:text-4xl lg:leading-tight xl:text-5xl xl:leading-tight text-gray-800 dark:text-neutral-200">
        <a class="hover:text-blue-600 focus:outline-hidden focus:text-blue-600 dark:text-neutral-300 dark:hover:text-white dark:focus:text-white" href="#">
          {content.infoTitle}
        </a>
      </h2>
      }
      <div class="relative  pt-0 rounded-lg">
        <Image 
                    src={content.infoImg}
                    alt={content.imgAlt || "Skysports Tandem i Åre"}
                    class="object-bottom shadow-xl shadow-gray-200 rounded-xl dark:shadow-gray-900/20 w-full h-2/3 object-cover rounded-xl"
                    width={content.imgWidth || '900'}
                    height={content.imgHeight || '514'}
                    quality={80}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
     </div>
    </div>
    <!-- End Col -->

    <div class={content.infoColR || 'sm:order-2'}>
      {content.isTandemPage &&
      <p class="mb-5 inline-flex items-center gap-1.5 py-1.5 px-3 rounded-md text-xs font-medium bg-gray-100 text-gray-800 dark:bg-neutral-800 dark:text-neutral-200">
        Viktig information inför tandemflyg.
      </p>
      }
      { content.isKursPage ? 
          <p></p> :
          <h2 class="text-2xl uppercase font-bold md:text-3xl lg:text-4xl lg:leading-tight xl:text-5xl xl:leading-tight text-gray-800 dark:text-neutral-200">
            <a class="text-slate-600 hover:text-blue-600 focus:outline-hidden focus:text-blue-600 dark:text-neutral-300 dark:hover:text-white dark:focus:text-white" href="#">
              {content.infoTitle}
            </a>
          </h2>
        }
      {content.infoText.map((text) => (
      
           <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400 text-balance text-pretty">{text.preText} <span class:list={text.spanClasses} >{text.spanText}</span>{text.postText}</p>
          ))}

      <!-- <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">{content.text}</p> -->
           {
      content.buttons && content.buttons.length > 0 && (
        <div class="flex  flex-col md:flex-row gap-4 mt-8 items-center">
          {content.buttons.map((button) => (
            <Button
              href={button.link}
              target={button.target || "_self"}
              variant={button.variant || "primary"}
            >
              {button.text}
            </Button>
          ))}
        </div>
      )
    }
   

      <div class="mt-5">
        {content.infoImg2 &&
        <Image 
                    src={content.infoImg2}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200  dark:shadow-gray-900/20 w-auto h-1/2 object-cover rounded-xl"
                    width={750}
                    height={500}
                    quality={80}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
       }
      </div> 
    </div>
    <!-- End Col -->
  </div>
  <!-- End Grid -->
</div>
<!-- End Card Blog -->