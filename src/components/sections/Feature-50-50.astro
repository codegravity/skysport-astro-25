---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';


interface Feature50Content {
    infoOrientationL?: boolean;
    infoTitle: string;
    infoDescription?: string;
    infoText: {
        preText?: string;
        spanText?: string;
        spanClasses?: string;
        postText?: string;
        linkTarget?: string;
        linkText?: string;
        linkUrl?: string; 
    }[],
    infoImg:  ImageMetadata;
    infoImg2?:  ImageMetadata;
    infoIcon?: string;
    buttons?: {
        text: string;
        link: string;
        target?: string;
    }[];
    isTandemPage?:  boolean;

}

interface Props {
    content: Feature50Content;
} 
const { content } = Astro.props;

content.infoOrientationL  && {
//const classPos = '';

}
---

<!-- Card Blog -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <!-- Grid -->
  <div class="grid sm:grid-cols-2 sm:items-center gap-8">
    <div class="sm:order-1">
      <div class="relative  pt-0 rounded-lg">
        <Image 
                    src={content.infoImg}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200 rounded-xl dark:shadow-gray-900/20 w-full h-full object-cover rounded-xl"
                    width={1200}
                    height={685}
                    quality={70}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
     </div>
    </div>
    <!-- End Col -->

    <div class="sm:order-2">
      {content.isTandemPage &&
      <p class="mb-5 inline-flex items-center gap-1.5 py-1.5 px-3 rounded-md text-xs font-medium bg-gray-100 text-gray-800 dark:bg-neutral-800 dark:text-neutral-200">
        Viktig information inför tandemflyg.
      </p>
    }
      <h2 class="text-2xl uppercase font-bold md:text-3xl lg:text-4xl lg:leading-tight xl:text-5xl xl:leading-tight text-gray-800 dark:text-neutral-200">
        <a class="hover:text-blue-600 focus:outline-hidden focus:text-blue-600 dark:text-neutral-300 dark:hover:text-white dark:focus:text-white" href="#">
          {content.infoTitle}
        </a>
      </h2>
      {content.infoText.map((text) => (
        
           <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400 text-balance text-pretty">{text.preText} <span class:list={text.spanClasses} >{text.spanText}</span>{text.postText}</p>
          ))}


      <p class="mt-3 text-lg text-gray-800 dark:text-neutral-400">{content.text}</p>

      <!-- Avatar -->
 <!--      <div class="mt-6 sm:mt-10 flex items-center">
        <div class="shrink-0">
          <img class="size-10 sm:h-14 sm:w-14 rounded-full" src="https://images.unsplash.com/photo-1669837401587-f9a4cfe3126e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80" alt="Blog Image">
        </div>

        <div class="ms-3 sm:ms-4">
          <p class="sm:mb-1 font-semibold text-gray-800 dark:text-neutral-200">
            Louise Donadieu
          </p>
          <p class="text-xs text-gray-500 dark:text-neutral-500">
            Strategic Marketing Consultant
          </p>
        </div>
      </div> -->
      <!-- End Avatar -->

      <div class="mt-5">
        <Image 
                    src={content.infoImg2}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200  dark:shadow-gray-900/20 w-auto h-1/2 object-cover rounded-xl"
                    width={750}
                    height={500}
                    quality={80}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
       
      </div> 
    </div>
    <!-- End Col -->
  </div>
  <!-- End Grid -->
</div>
<!-- End Card Blog -->