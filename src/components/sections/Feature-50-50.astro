---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';


interface Feature50Content {
    infoTitle: string;
   // infoDescription: string;
    infoText: {
        preText?: string;
        spanText?: string;
        spanClasses?: string;
        postText?: string;
    }[],
    infoImg:  ImageMetadata;
    infoIcon?: string;
    buttons?: {
        text: string;
        link: string;
        target?: string;
    }[];

}

interface Props {
    content: Feature50Content;
} 
const { content } = Astro.props;
---

<!-- Card Blog -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <!-- Grid -->
  <div class="grid sm:grid-cols-2 sm:items-center gap-8">
    <div class="sm:order-1">
      <div class="relative  pt-0 rounded-lg">
        <Image 
                    src={content.infoImg}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200 rounded-xl dark:shadow-gray-900/20 w-full h-full object-cover rounded-xl"
                    width={1200}
                    height={685}
                    quality={70}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
