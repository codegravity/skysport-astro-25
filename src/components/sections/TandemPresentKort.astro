---
import { Image } from 'astro:assets';
import presentkort from '@assets/images/products/presentkort2.jpg';
import tandemsummer from '@assets/images/tandemhenning23.jpg';
import { Icon } from 'astro-icon/components';

interface Technology {
  title: string;
  description: string;
  iconGradient: string;
  iconPath: string;
}

const technologies: Technology[] = [
  {
    title: "AI-Powered Optimization",
    description: "Machine learning algorithms continuously analyze data to optimize routes, predict demand, and reduce operational costs.",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
  },
  {
    title: "Real-Time Visibility",
    description: "Track every shipment, monitor warehouse operations, and access live analytics through our comprehensive dashboard platform.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
  },
  {
    title: "IoT Integration",
    description: "Smart sensors and connected devices provide real-time monitoring of temperature, humidity, location, and condition tracking.",
    iconGradient: "from-blue-500 to-blue-600",
    iconPath: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
  },
  {
    title: "Enterprise Security",
    description: "Bank-level encryption, multi-factor authentication, and compliance with industry standards ensure your data stays secure.",
    iconGradient: "from-teal-500 to-teal-600",
    iconPath: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
  }
];
---

<section class="py-24 lg:py-12 bg-linear-to-b from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-6 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <div class="inline-block px-4 py-2 mb-4 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
          Tandem Presentkort
        </div>
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Ett presentkort på <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400">Tandemskärmflyg</span>
          är den perfekta presenten.
        </h2>
        <p class="text-xl text-slate-300 mb-8 leading-relaxed">
          Skärmflyg är något annorlunda och spännande som inte liknar något annat man varit med om tidigare. Dessutom gäller presentkortet 2 år, vilket gör att den som fått presenten har gott om tid att bestämma tidpunkt för flygningen.
        </p>

        <!-- Presentkort -->
        <div class="space-y-6">
      
            <div class="flex items-start group">
                    <div class="grid grid-cols-8 gap-2 w-full">
                        <div class="w-[50px]">
                            <Icon type="button" name="mdi--paraglide-ss-vit" class=" sm:text-3xl text-2xl  "/>
                           
                        </div>
                        <div class="text-left col-start-2 col-end-6">
                           <h3 class="text-xl lg:text-2xl font-semibold text-white mb-2 px-2">Tandemflyg</h3>
                        </div>
                        <div class="text-right col-end-8">
                           <h3 class="text-xl font-semibold text-white mb-2">Pris</h3> 
                        </div>
                        <div class="col-end-9">
                           <h4 class="text-xl font-semibold text-white lg:text-amber-200 mb-2">1.800 kr</h4> 
                        </div>
                        <div class="col-start-2 col-end-9">
                            <p class="text-slate-400 leading-relaxed">
                            Flyg från någon av våra startplatser på Åreskutan med landning nere i dalen på Draklanda.
                            </p>
                        </div>
                    </div>
            </div>

            <div class="flex items-start group">
                    <div class="grid grid-cols-8 gap-2 w-full">
                        <div class=" w-full">
                            <div class="flex flex-row gap-0 items-center">
                                <Icon type="button" name="mdi--paraglide-ss-vit" class=" sm:text-3xl text-2xl  "/>
                                <Icon type="button" name="ri--add-fill" class=" sm:text-2xl text-xl  "/>
                                <Icon type="button" name="ri--camera-3-line-vit" class=" sm:text-3xl text-2xl  "/>
                            </div>
                        </div>
                        <div class="text-left col-start-2 col-end-6">
                           <h3 class="text-xl lg:text-2xl font-semibold text-white mb-2 px-2">Tandemflyg med film/foto</h3>
                        </div>
                        <div class="text-right col-end-8">
                           <h3 class="text-xl font-semibold text-white mb-2">Pris</h3> 
                        </div>
                        <div class="col-end-9">
                           <h4 class="text-xl font-semibold text-white lg:text-amber-600 mb-2">2.200 kr</h4> 
                        </div>
                        <div class="col-start-2 col-end-9">
                            <p class="text-slate-400 leading-relaxed">
                                Vanligt tandemflyg som filmas med actionkamera. Passagerare får sd kort med film/foto efter landningen
                            </p>
                        </div>
                    </div>
            </div>
    
    
        </div>

        <!-- CTA -->
  <!--       <div class="mt-10">
          <a 
            href="/documentation" 
            class="inline-flex items-center px-6 py-3 text-base font-semibold text-white bg-linear-to-r from-blue-600 to-teal-600 hover:from-blue-700 hover:to-teal-700 rounded-lg shadow-lg hover:shadow-xl transition-all group"
          >
            Explore Our Technology
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div> -->

      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <Image 
            src={tandemsummer}
            alt="Skysports Tandem Presentkort"
            class="w-full h-full object-cover"
            width={800}
            height={800}
          />
          <!-- <div class="absolute inset-0 bg-linear-to-br from-blue-900/80 via-teal-900/60 to-blue-900/80"></div> -->
          <div class="absolute inset-0 flex items-center justify-center p-8">
            <div class="text-center">

              <h3 class="text-2xl font-bold text-white mb-2">Smart Logistics Platform</h3>
              <p class="text-slate-300">Real-time analytics dashboard</p>
            </div>
          </div>
        </div>
        
        <!-- Floating Cards -->
<!--         <div class="absolute -top-4 -right-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-green-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900">99.9% Uptime</span>
          </div>
        </div> -->

<!--         <div class="absolute -bottom-4 -left-4 bg-white rounded-lg p-4 shadow-xl z-20 animate-pulse" style="animation-delay: 0.5s;">
          <div class="flex items-center">
            <div class="w-3 h-3 rounded-full bg-blue-500 mr-2"></div>
            <span class="text-sm font-semibold text-slate-900">Real-time Sync</span>
          </div>
        </div> -->


      </div>
    </div>
  </div>
</section>


