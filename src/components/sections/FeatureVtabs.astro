---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import landingDraklanda from "@assets/images/tandem/tandemlanding.jpg";
import topStugan from "@assets/images/tandem/tandem_stugan.jpg";
import winterTandem from '@assets/images/tandem-tandem.jpeg';

const btnID ='tabs-with-card-item-';
const dataTab = '#tabs-with-card-';
const btnControls = 'tabs-with-card-';
interface VtabInfoContent {
    infoTitle?: string,
    infoIcon?: string,
    infoCards?: {
        cardText?: string,
        cardImg?: ImageMetadata,
        cardIcon?: string,
        cardNr?: string,
    }[];
}
interface Props {
    content: VtabInfoContent;
} 
const { content } = Astro.props;

---

<!-- Features -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <div class="relative p-6 md:p-16">
    <!-- Grid -->
    <div class="relative z-10 lg:grid lg:grid-cols-12 lg:gap-16 lg:items-center">
      <div class="mb-10 lg:mb-0 lg:col-span-6 lg:col-start-8 lg:order-2">
        <h2 class="text-2xl text-gray-800 font-bold sm:text-3xl dark:text-neutral-200">
          {content.infoTitle}
        </h2>

        <!-- Tab Navs -->
        <nav class="grid gap-4 mt-5 md:mt-10" aria-label="Tabs" role="tablist" aria-orientation="vertical">
            {content.infoCards.map((item) => (
                
                <button type="button" class=" hs-tab-active:bg-white cursor-pointer hs-tab-active:shadow-md hs-tab-active:hover:border-transparent text-start hover:bg-gray-200 focus:outline-hidden focus:bg-gray-200 p-4 md:p-5 rounded-xl dark:hs-tab-active:bg-neutral-700 dark:hover:bg-neutral-700 dark:focus:bg-neutral-700 active"
                                             id={btnID + item.cardNr}  
                                             aria-selected="true"  
                                             data-hs-tab={dataTab + item.cardNr} 
                                             aria-controls={btnControls + item.cardNr} 
                                             role="tab">
                    <span class="flex gap-x-6">
                        {item.cardIcon &&
                         <Icon  name={item.cardIcon} class="hidden dark:block sm:text-8xl text-xl "/> 
                         }  
                        <span class="grow">
                        {/*  <span class="block text-lg font-semibold hs-tab-active:text-blue-600 text-gray-800 dark:hs-tab-active:text-blue-500 dark:text-neutral-200">Test rubrik</span> */}
                            <span class="block mt-1 text-gray-800 dark:hs-tab-active:text-gray-200 dark:text-neutral-200">{item.cardText}</span>
                        </span>
                    </span>
                </button>

            ))}
        </nav>
        <!-- End Tab Navs -->
      </div>
      <!-- End Col -->

      <div class="lg:col-span-5 lg:col-start-2">
        <div class="relative">
          <!-- Tab Content -->
          <div>
            <div id="tabs-with-card-1" role="tabpanel" aria-labelledby="tabs-with-card-item-1">
                <Image 
                    src={topStugan}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200 rounded-xl dark:shadow-gray-900/20 w-full h-full object-cover rounded-xl"
                    width={500}
                    height={750}
                    quality={70}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
            </div>

            <div id="tabs-with-card-2" class="hidden" role="tabpanel" aria-labelledby="tabs-with-card-item-2">
                <Image 
                    src={winterTandem}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200 rounded-xl dark:shadow-gray-900/20 w-full h-full object-cover rounded-xl"
                    width={500}
                    height={750}
                    quality={70}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
            </div>

            <div id="tabs-with-card-3" class="hidden" role="tabpanel" aria-labelledby="tabs-with-card-item-3">
                <Image 
                    src={landingDraklanda}
                    alt="Skysports Tandem i Åre"
                    class="shadow-xl shadow-gray-200 rounded-xl dark:shadow-gray-900/20 w-full h-full object-cover rounded-xl"
                    width={500}
                    height={750}
                    quality={70}
                    format="webp"
                    loading="lazy"
                    decoding="async"
                    layout="constrained"
                />
             </div>
          </div>
          <!-- End Tab Content -->

          <!-- SVG Element -->
          <div class="hidden absolute top-0 end-0 translate-x-20 md:block lg:translate-x-40 lg:-translate-y-1">
            <Icon  name={content.infoIcon} class="  text-9xl "/>
<!--             <svg class="w-16 h-auto text-orange-500" width="121" height="135" viewBox="0 0 121 135" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M5 16.4754C11.7688 27.4499 21.2452 57.3224 5 89.0164" stroke="currentColor" stroke-width="10" stroke-linecap="round"/>
              <path d="M33.6761 112.104C44.6984 98.1239 74.2618 57.6776 83.4821 5" stroke="currentColor" stroke-width="10" stroke-linecap="round"/>
              <path d="M50.5525 130C68.2064 127.495 110.731 117.541 116 78.0874" stroke="currentColor" stroke-width="10" stroke-linecap="round"/>
            </svg> -->
          </div>
          <!-- End SVG Element -->
        </div>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->

    <!-- Background Color -->
    <div class="absolute inset-0 grid grid-cols-12 size-full">
      <div class="col-span-full lg:col-span-7 lg:col-start-6 bg-gray-100 w-full h-5/6 rounded-xl sm:h-3/4 lg:h-full dark:bg-neutral-800"></div>
    </div>
    <!-- End Background Color -->
  </div>
</div>
<!-- End Features -->