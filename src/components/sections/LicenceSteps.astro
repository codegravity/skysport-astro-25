---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";


interface StegContent {
  title: string,
  description: string,
  descriptionImage?: ImageMetadata,
  stegTitle?: string,
  stegs?: {
    Text: string,
    LinkURL?: string,
    LinkText?: string,
    LinkTarget?: string,
  }[];
  buttons?: {
    text: string,
    link: string,
    target?: string,
  }[];
}

interface Props {
  content: StegContent;
}

const { content } = Astro.props;
---


<div class="bg-neutral-900">
  <!-- Approach -->
  <div class="max-w-5xl lg:max-w-7xl px-4 xl:px-0 py-10 lg:pt-20 lg:pb-20 mx-auto">
    <!-- Title -->
    <div class="max-w-3xl mb-10 lg:mb-14">
      <h4 class="text-white font-semibold text-2xl md:text-4xl md:leading-tight dark:text-slate-200">{content.title}</h4>
      <p class="mt-1 text-lg text-neutral-400 lg:text-xl">{content.description}</p>
    </div>
    <!-- End Title -->

    <!-- Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 lg:items-center">
      <div class="aspect-w-9 aspect-h-16 lg:aspect-none ">
        { content.descriptionImage && (
            <Image 
                src={content.descriptionImage}
                alt="Skysports Tandem i Ã…re"
                class=" rounded-xl dark:shadow-gray-900/20 w-auto h-2/3 object-cover mx-auto rounded-xl"
                width={440}
                height={648}
                quality={90}
                format="webp"
                loading="lazy"
                decoding="async"
                layout="constrained"
            />
        )}    
        </div>
      <!-- End Col -->

      <!-- Timeline -->
      <div>
        <!-- Heading -->
        <div class="mb-4">
          <h3 class="text-[#ff0] text-xl font-medium uppercase">
            {content.stegTitle}
          </h3>
        </div>
        <!-- End Heading -->
        
            { 
                content.stegs.map((steg, index) => (
             
                    
                    <div class="flex gap-x-5 ms-1">
                    <!-- Icon -->
                    <div class="relative last:after:hidden after:absolute after:top-8 after:bottom-0 after:start-4 after:w-px after:-translate-x-[0.5px] after:bg-neutral-400">
                        <div class="relative z-10 size-8 flex justify-center items-center ">
                        <span class="flex shrink-0 justify-center items-center size-8  border border-neutral-400 text-[#ff0] font-semibold text-xl uppercase rounded-full">
                          {index + 1}
                        </span>
                        </div>
                    </div>
                    <!-- End Icon -->

                    <!-- Right Content -->
                    <div class="grow pt-0.5 pb-8 sm:pb-12">
                        <p class="text-sm lg:text-lg lg:text-base text-neutral-400">
                            <span class="text-white">{steg.Text}</span>
                            { steg.LinkURL &&
                                <a class="text-orange-500" href={steg.LinkURL} target={steg.LinkTarget}>{steg.LinkText}  </a>
                            }
                        </p>

                    </div>
                    <!-- End Right Content -->
                    </div>
                    
                ))}

        <a class="group inline-flex items-center gap-x-2 py-2 px-3 bg-[#ff0] font-medium text-sm text-neutral-800 rounded-full focus:outline-hidden" href="#">
             <Icon type="button" name="mdi--paraglide-ss" class=" sm:text-lgtext-sm md:text-xl "/>
