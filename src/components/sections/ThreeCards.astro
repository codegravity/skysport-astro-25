---
//import Button from '@/components/ui/Button.astro';
import { Image } from 'astro:assets';


interface CardContent {
    title1: string;
    description1: string;
    url1left?: string;
    linktext1left?: string;
    url1right?: string;
    linktext1right?: string;
    image1?: string | any;
    title2: string;
    description2: string;
    url2left?: string;
    linktext2left?: string;
    url2right?: string;
    linktext2right?: string;
    image2?: string | any;
    title3: string;
    description3: string;
    url3left?: string;
    linktext3left?: string;
    url3right?: string;
    linktext3right?: string;
    image3?: string | any;  

}

interface Props {
    content: CardContent;
} 
const { content } = Astro.props;

---

<!-- Card Blog -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
  <!-- Grid -->
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Card -->
    <div class="group flex flex-col h-full bg-white border border-gray-200 shadow-2xs rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70">
      <div class="h-100 flex flex-col justify-center items-center bg-blue-600 rounded-t-xl">
            {content.image1 && (
              <Image
                  src={content.image1}
                  alt="Grundkurs"
                  width={550}
                  height={557}
                  class="   object-fit rounded-t-xl"
                  quality={70}
                  format="webp"
                  loading="eager"
                  decoding="async"
                  priority       
              />         
         )}
      </div>
      <div class="p-4 md:p-6">
        <span class="block mb-1 text-xs font-semibold uppercase text-blue-600 dark:text-blue-500">
          <!-- Atlassian API -->
        </span>
        <h3 class="text-xl font-semibold text-gray-800 dark:text-neutral-300 dark:hover:text-white">
          {content.title1}
        </h3>
        <p class="mt-3 text-gray-500 dark:text-neutral-500">
         {content.description1}
        </p>
      </div>
      <div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 dark:border-neutral-700 dark:divide-neutral-700">
        <a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-es-xl bg-white text-gray-800 shadow-2xs hover:bg-gray-50 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
          {content.linktext1left}
        </a>
        <a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-ee-xl bg-white text-gray-800 shadow-2xs hover:bg-gray-50 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
          {content.linktext1right}
        </a>
      </div>
    </div>
    <!-- End Card -->

    <!-- Card -->
    <div class="group flex flex-col h-full bg-white border border-gray-200 shadow-2xs rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70">
      <div class="h-100 flex flex-col justify-center items-center bg-rose-500 rounded-t-xl">
            {content.image2 && (
              <Image
                  src={content.image2}
                  alt="Grundkurs"
                  width={550}
                  height={557}
                  class="   object-fit rounded-t-xl"
                  quality={70}
                  format="webp"
                  loading="eager"
                  decoding="async"
                  priority       
              />         
         )}
      </div>
      <div class="p-4 md:p-6">
        <span class="block mb-1 text-xs font-semibold uppercase text-rose-600 dark:text-rose-500">
          <!-- Asana API -->
        </span>
        <h3 class="text-xl font-semibold text-gray-800 dark:text-neutral-300 dark:hover:text-white">
          {content.title2}
        </h3>
        <p class="mt-3 text-gray-500 dark:text-neutral-500">
          {content.description2}
        </p>
      </div>
      <div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 dark:border-neutral-700 dark:divide-neutral-700">
        <a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-es-xl bg-white text-gray-800 shadow-2xs hover:bg-gray-50 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
          {content.linktext2left}
        </a>
        <a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-ee-xl bg-white text-gray-800 shadow-2xs hover:bg-gray-50 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
          {content.linktext2right}
        </a>
      </div>
    </div>
    <!-- End Card -->

    <!-- Card -->
    <div class="group flex flex-col h-full bg-white border border-gray-200 shadow-2xs rounded-xl dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70">
      <div class="h-100 flex flex-col justify-center items-center bg-amber-500 rounded-t-xl">
            {content.image3 && (
              <Image
                  src={content.image3}
                  alt="Grundkurs"
                  width={550}
                  height={557}
                  class="   object-fit rounded-t-xl"
                  quality={70}
                  format="webp"
                  loading="eager"
                  decoding="async"
                  priority       
              />         
         )}
      </div>
      <div class="p-4 md:p-6">
        <span class="block mb-1 text-xs font-semibold uppercase text-amber-500">
         <!--  Slack API -->
        </span>
        <h3 class="text-xl font-semibold text-gray-800 dark:text-neutral-300 dark:hover:text-white">
          {content.title3}
        </h3>
        <p class="mt-3 text-gray-500 dark:text-neutral-500">
          {content.description3}
        </p>
      </div>
      <div class="mt-auto flex border-t border-gray-200 divide-x divide-gray-200 dark:border-neutral-700 dark:divide-neutral-700">
          {content.linktext3left && content.linktext3left.length > 0 && (
              <a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-es-xl bg-white text-gray-800 shadow-2xs hover:bg-gray-50 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
                {content.linktext3left}
              </a>
          )}

        <a class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-ee-xl bg-white text-gray-800 shadow-2xs hover:bg-gray-50 focus:outline-hidden focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" href="#">
          {content.linktext3right}
        </a>
      </div>
    </div>
    <!-- End Card -->
  </div>
  <!-- End Grid -->
</div>
<!-- End Card Blog -->