---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';

interface ListContent {
    listTitle: string,
    listDescription: string,
    listIcon?: string,
    listIconDark?: string,
    listList: {
        listItem: string,
    }[];

}

interface Props {
    content: ListContent;
} 
const { content } = Astro.props;

const listIconCheck = content.listIcon;
const listIconCheckD = content.listIconDark;

---
 <section >
    <div class="site-container   px-0 py-6  ">
<h3 class="px-4 py-0 text-lg text-left w-full lg:text-2xl font-bold " >{content.listTitle}</h3>
{content.listDescription &&  (
    <p class="px-4 font-bold dark:text-neutral-200" style="">{content.listDescription}</p>
)}
    {content.listList && (
        <ul class="sm:mt-5 sm:space-y-3">
       {content.listList.map((item) => (
            <li class="w-full px-4  ">
                <div class="grid grid-cols-12 ">
                    <div class="py-2 sm:py-0  col-span-12 flex flex-row gap-2 items-center">  
                        <span class="">
                            <Icon type="button" name='mdi--checkbox-marked-circle-outline' class="dark:hidden  text-2xl sm:text-xl "/>
                            <Icon type="button" name='mdi--checkbox-marked-circle-outline-light' class="hidden dark:block  text-2xl sm:text-xl "/>
                            
                        </span>
                        <div class="text-sm sm:text-lg lg:text-xl dark:text-slate-200">{item.listItem}</div>
                    </div>
                </div>
            </li> 
          ))}
    </ul>
    )}
  

</div>
</section>
