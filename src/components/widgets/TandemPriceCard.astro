---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';

interface TandemPriceCardContent {
    tandemProducts?: {
        title: string;
        description: string;
        price: string;
        foto: number;
    }[];

}

interface Props {
    content: TandemPriceCardContent;
} 
const { content } = Astro.props;
---


  
             {
      content.tandemProducts && (
        <section class="">
            <div class="site-container  gap-6 px-0 md:py-24 py-12 px-4 sm:px-6 lg:px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ">
         { content.tandemProducts.map((tandemproduct) => (



            <!-- Card -->
            
                <div class="block border border-slate-400 rounded-lg  p-4  dark:border-neutral-700  bg-white dark:bg-slate-600  ">
                    <div class="grid lg:grid-cols-3  gap-2 w-full">
                        { tandemproduct.foto === 0 ? 
                            <div class=" flex flex-row gap-0 items-center ">
                                <Icon type="button" name="mdi--paraglide-ss-vit" class="hidden dark:block sm:text-4xl text-2xl  "/>  
                                <Icon type="button" name="mdi--paraglide-ss" class="dark:hidden  sm:text-4xl text-2xl  "/> 
                            </div> 
                            : 
                            <div class="flex flex-row gap-0 items-center">
                                <Icon type="button" name="mdi--paraglide-ss-vit" class="hidden dark:block sm:text-4xl text-2xl  "/>  
                                <Icon type="button" name="mdi--paraglide-ss" class="dark:hidden  sm:text-4xl text-2xl  "/> 
                                <Icon type="button" name="ri--add-fill" class="hidden dark:block sm:text-2xl text-xl  "/>
                                <Icon type="button" name="ri--add-fill-blue" class="dark:hidden sm:text-2xl text-xl  "/>
                                <Icon type="button" name="ri--camera-3-line-vit" class="hidden dark:block sm:text-3xl text-2xl  "/>
                                <Icon type="button" name="ri--camera-3-line" class="dark:hidden sm:text-3xl text-2xl  "/>
                            </div>
                         }
                        <div class="text-left col-span-2 ">
                           <h3 class="text-2xl lg:text-xl font-bold  dark:text-slate-200 mb-2">{tandemproduct.title}</h3>
                        </div>
                        <div class="text-center sm:text-right px-8 col-span-3  "> 
                           <h4 class="text-lg sm:text-xl font-semibold text-amber-600 dark:text-slate-200 mb-2">Pris: {tandemproduct.price}</h4> 
                        </div>
                    </div>   
                    <div class="">
                        <p class="text-slate-600 dark:text-slate-200 leading-relaxed text-pretty">
                        {tandemproduct.description}
                        </p>
                    </div>    
                </div>
            <!-- End Card -->
         ))}
     </div>
        </section>

      )
       
    }
