---
import { Image } from "astro:assets";
import { Icon } from 'astro-icon/components';

interface ListContent {
    listTitle: string,
    listDescription: string,
    listIcon?: string,
    listIconDark?: string,
    listList: {
        listItem: string,
    }[];
}

interface Props {
    content: ListContent;
} 
const { content } = Astro.props;

---
 <section >
    <div class="site-container   px-0 py-6  ">
<h3 class="px-4 py-4 text-lg text-left w-full lg:text-2xl font-bold " >{content.listTitle}</h3>
{content.listDescription &&  (
    <p class="px-4 font-bold dark:text-neutral-200" style="">{content.listDescription}</p>
)}
    {content.listList && (
        <ul class="sm:mt-5 sm:space-y-3">
       {content.listList.map((item) => (
            <li class="w-full px-4 py-2 ">
                <div class="grid grid-cols-12 ">
                    <div class="py-1  col-span-1 ">
                       
                        <Icon type="button" name="solar--info-circle-linear" class="dark:hidden sm:text-xl text-xl "/>
                        <Icon type="button" name="solar--info-circle-linear-vit" class="hidden dark:block sm:text-xl text-lg  "/>
                    </div>
                    <div class="col-span-11 l text-left leading-relaxed  text-balanced dark:text-neutral-200">
                        {item.listItem}
                    </div>
                </div>
            </li> 
          ))}
    </ul>
    )}
  

</div>
</section>
